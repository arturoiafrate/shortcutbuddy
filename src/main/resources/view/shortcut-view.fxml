<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.ScrollPane?>
<VBox alignment="CENTER" opacity="0.7" prefHeight="93.0" prefWidth="117.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="it.arturoiafrate.shortcutbuddy.controller.ShortcutController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <TextField fx:id="searchBox" promptText="Premi . per iniziare a cercare..." VBox.vgrow="NEVER" />
    <Label fx:id="messageLabel" text="" visible="false" />
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <GridPane fx:id="shortcutsGrid" hgap="10.0" vgap="5.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50.0" />
                    <ColumnConstraints percentWidth="50.0" />
                </columnConstraints>
            </GridPane>
        </content>
    </ScrollPane>

</VBox>
