<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="it.arturoiafrate.shortcutbuddy.controller.SettingsController">
    <center>
        <TabPane fx:id="tabPane">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Button fx:id="saveButton" onAction="#handleSaveSettings" />
        </HBox>
    </bottom>
</BorderPane>
